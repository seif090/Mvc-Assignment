@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>ResetPassword</h1>

<form asp-action="ResetPassword" enctype="post">


    <input type="hidden" asp-for="Email" >
    <input type="hidden" asp-for="Token">
    <div class="form-group">

        <label asp-for="Password">Password</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">

        <label asp-for="ConfirmPassword">ConfirmPassword</label>
        <input type="text" asp-for="ConfirmPassword" class="form-control" />
    </div>



    <input type="submit" value="Change  password" class="btn btn-primary" />
    @*    <a asp-action="/Index" class="btn btn-light">Back to list</a>*@
</form>
