@model EmployeeDto

@{
    var departments = ViewBag.Departments != null
                      ? new SelectList(ViewBag.Departments, nameof(Department.Id), nameof(Department.Name))
                      : new SelectList(Enumerable.Empty<Department>());
}
<h1>Create new Employee</h1>

<form asp-action="Create" enctype="multipart/form-data">

    <div class="form-group">

        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>  
    <div class="form-group">

        <label asp-for="Age">Age</label>
        <input type="text" asp-for="Age" class="form-control" />
    </div> 

    <div class="form-group">

        <label asp-for="Address">Address</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>  

    <div class="form-group">

        <label asp-for="Salary">Salary</label>
        <input type="text" asp-for="Salary" class="form-control" />
    </div>  
    <div class="form-group">

        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>  
    <div class="form-group">

        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" />
    </div>   
    <div class="form-group">

        <label asp-for="HiringDate">HiringDate</label>
        <input type="date" asp-for="HiringDate" class="form-control" />
    </div> 
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input type="file"  asp-for="Image" class="form-control-file" />
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId">DepartmentId</label>
        <select class="form-control" asp-items="@departments" asp-for="DepartmentId">
            <option value="@null">--select Department </option>
        </select>
    </div>   

    <input type="submit" value="create"  class="btn btn-primary"/>
    <a asp-action="Index" class="btn btn-light">Back to list</a>
</form>