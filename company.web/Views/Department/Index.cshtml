@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

@if (Model?.Count() > 0)
{
    <a asp-action="Create" class="btn btn-warning " >create new Department</a>
    <table class="table">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(D=>D.Id)</th>
                <th> @Html.DisplayNameFor(D=>D.code)</th>
                <th> @Html.DisplayNameFor(D=>D.Name)</th>
                <th> @Html.DisplayNameFor(D=>D.CreatedAt)</th>
                <th>details</th>
                <th>edit</th>
                <th>Delte</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var dep in Model)
            {

                <tr>
                    <td>@dep.Id</td>
                    <td>@dep.code</td>
                    <td>@dep.Name</td>
                    <td>@dep.CreatedAt</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@dep.Id" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@dep.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@dep.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="GetDepartment" class="btn btn-danger">Details</a>



}
else
{
    <div>
        <a asp-action="Create" class="btn btn-warning">create new Department</a>


        no data
    </div>

}


